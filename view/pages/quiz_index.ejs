<% data.quizInfo.forEach((el, index) => { %> <% if(index % 2 === 0) {%>
<div class="quiz">
  <div class="quiz__category"><%= el.category%></div>
  <div class="quiz__info">
    <div class="quiz__presentation">
      <% }else {%>
      <div class="quiz--inversed">
        <div class="quiz__category"><%= el.category%></div>
        <div class="quiz__info--inversed">
          <div class="quiz__presentation--inversed">
            <% }%>
            <p><%= el.description%></p>
          </div>
          <% if(index % 2 === 0) {%>
          <div class="quiz__img">
            <% }else {%>
            <div class="quiz__img--inversed">
              <% }%>
              <a href="/quiz/<%=el.category%>">
                <img
                  src="/images/<%=el.image%>"
                  class="quiz__image"
                  alt="<%=el.image%>"
                />
                <p class="quiz__doQuiz">faire le quiz &#x2794;</p>
              </a>
            </div>
          </div>
        </div>
        <%}); %>
      </div>
    </div>
  </div>
</div>
